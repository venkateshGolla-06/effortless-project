{% style %}
.custom-subscribeus--{{ section.id }}{
  padding-top: {{ section.settings.padding_top | divided_by:2 }}px;
  padding-bottom: {{ section.settings.padding_bottom | divided_by:2 }}px;
  background-color: {{ section.settings.background_color }};
  min-height:50vh;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  padding:3rem;
}
@media screen and (min-width:768px){
  .custom-subscribeus--{{ section.id }}{
  padding-top: {{ section.settings.padding_top  }}px;
  padding-bottom: {{ section.settings.padding_bottom  }}px;
  }
}
.custom-subscribeus--button{
background-color: #5C6E4A;
width:90%;
height:40px;
border-radius:8px;
color: #fff;
border:none;
margin-top:20px;
}
.custom-subscribeus--form{
  display:flex;
  flex-direction:column;
  align-items:center;
  align-items:center;

}

.custom-subscribeus--input{
  padding:20px;
  border-radius:12px;
  width:90%;
  outline:none;
  height:40px;
  border:none;

}
.email-signup-banner__heading{
  font-size:25px;
}
@media screen and (min-width:768px){
  .custom-subscribeus--form{
   flex-direction:row;
   justify-content:center;
   align-items:center;
}
.custom-subscribeus--button{
  width:140px;
  height:40px;
}
.custom-subscribeus--input{
  padding:20px;
  border-radius:12px;
  height:40px;
  margin-right:20px;
  outline: none;
  width:394px;

}
.email-signup-banner__heading{
  font-size:36px;
}
}

{% endstyle %}

<div class="custom-subscribeus--container custom-subscribeus--{{ section.id }}">
  <div class="custom-subscribeus--container">
        <h1 class="email-signup-banner__heading">
          {{ section.settings.title }}
        </h1>
        <div class="custom-subscribeus--form">
          {% form 'customer' %}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div>
              <div>
                <input
                  id="NewsletterForm--{{ section.id }}"
                  type="email"
                  name="contact[email]"
                  class="custom-subscribeus--input"
                  value="{{ form.email }}"
                  aria-required="true"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  {% if form.errors %}
                    autofocus
                    aria-invalid="true"
                    aria-describedby="Newsletter-error--{{ section.id }}"
                  {% elsif form.posted_successfully? %}
                    aria-describedby="Newsletter-success--{{ section.id }}"
                  {% endif %}
                  placeholder="{{ 'newsletter.label' | t }}"
                  required
                >
                <p class="show-msg"></p>
                <button
                  type="submit"
                  class="custom-subscribeus--button"
                  name="commit"
                  id="Subscribe"
                  aria-label="{{ 'newsletter.button_label' | t }}"
                >
                  {{ section.settings.button_text }}
                </button>
              </div>
            </div>
          {% endform %}
         
        <div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
  
    function handleFormSubmit(event) {
      event.preventDefault(); 

      var form = event.target; 
      var emailInput = form.querySelector('NewsletterForm--{{ section.id }}'); 
      var email = emailInput.value.trim(); 

  
      emailInput.style.display = 'none';

      var successMsg = document.createElement('p');
      successMsg.textContent = "Thanks for subscribing Us!";
      form.appendChild(successMsg);
    }

    var form = document.querySelector('.custom-subscribeus--form form');

    form.addEventListener('submit', handleFormSubmit);
  });
</script>

{% schema %}

{
"name": "subscribeus Section",
"tag": "section",
"class": "section",
"settings": [
 {
    "type": "color_background",
    "id": "background_color",
    "label": "Background color",
    "default": "#ffffff"
 
 },
 {
    "type": "header",
    "content": "Text customization"
},

  {
    "type": "inline_richtext",
    "id": "title",
    "default": "Subscribe to our Newsletter",
    "label": "Heading"
  },
  {
    "type": "select",
    "id": "text_align",
    "options": [
      {
        "value": "left",
        "label": "Left"
      },
      {
        "value": "center",
        "label": "Center"
      },
      {
        "value": "right",
        "label": "Right"
      }
    ],
    "default": "left",
    "label": "Heading alignment"
  },
  {
    "type": "color",
    "id": "heading_color",
    "label": "Heading Color"
  },
  {
    "type": "text",
    "id": "description",
    "label": "Description",
    "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
  },
  {
    "type": "text",
    "id": "button_text",
    "label": "Button text",
    "default": "Subscribe"
  },

{
    "type": "header",
    "content": "Section Padding"
},
  {
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 100,
    "step": 1,
    "unit": "px",
    "label": "Padding top",
    "default": 10
  },
  {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "step": 1,
    "unit": "px",
    "label": "Padding bottom",
    "default": 10
  }
  


],
"presets": [
 {
  "name": "subscribe us section"
 }

]


}




{% endschema %}
