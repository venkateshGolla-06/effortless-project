
{% style %}

.custom-subscribeus--{{ section.id }}{
  padding-top: {{section.settings.padding_top | divided_by:2 }}px;
  padding-bottom: {{section.settings.padding_bottom | divided_by:2 }}px;
  background-color: {{ section.settings.background_color }};
  min-height:5ovh;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
}
@media screen and (min-width:768px){
  .custom-subscribeus--{{ section.id }}{
  padding-top: {{section.settings.padding_top  }}px;
  padding-bottom: {{section.settings.padding_bottom  }}px;
  }
}
.custom-subscribeus--button{
background-color: #5C6E4A;
width:140px;
height:40px;
border-radius:8px;
color: #fff;
border:none;
margin-left:15px;
}
.custom-subscribeus--form{
  display:flex;
  flex-direction:column;
}
@media screen and (min-width:768px){
  .custom-subscribeus--form{
   flex-direction:row;
}
.custom-subscribeus--button{
  margin-left:2px;
}
}
.custom-subscribeus--input{
  padding:20px;
  border-radius:12px;

}

{% endstyle %}








<div class="custom-subscribeus--container custom-subscribeus--{{ section.id }}">
  <div class="custom-subscribeus--container">
        <h2 class="email-signup-banner__heading ">
          {{ section.settings.title }}
        </h2>
        <div class="custom-subscribeus--form">
          <input type="email"  placeholder="Email Address" class="custom-subscribeus--input"/>
          <button class="custom-subscribeus--button"> {{ section.settings.button_text }} </button>
        <div>
  </div>
</div>

{% schema %}

   {
   "name": "subscribeus Section",
   "tag": "section",
   "class": "section",
   "settings": [
    {
        "type": "color_background",
        "id": "background_color",
        "label": "Background color",
        "default": "#ffffff"
     
     },
     {
        "type": "header",
        "content": "Text customization"
    },

      {
        "type": "inline_richtext",
        "id": "title",
        "default": "Subscribe to our Newsletter",
        "label": "Heading"
      },
      {
        "type": "select",
        "id": "text_align",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left",
        "label": "Heading alignment"
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "Heading Color"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description",
        "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button text",
        "default": "Subscribe"
      },

    {
        "type": "header",
        "content": "Section Padding"
    },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding top",
        "default": 10
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding bottom",
        "default": 10
      }
      


   ],
   "presets": [
    {
     "name": "subscribe us section"
    }

   ]


}




{% endschema %}