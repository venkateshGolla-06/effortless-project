
{%style %}

.custom-collections--{{ section.id }}{
  padding-top:{{ section.settings.padding_top | divided_by:2 }}px;
  padding-bottom:{{ section.settings.padding_bottom | divided_by:2 }}px;
  background-color: {{section.settings.color_background}};
}

.custom-collections-container{
min-height: 100vh;
display: flex;
flex-direction: column;
justify-content: center;

}

.custom-collection-heading{
  text-align:{{ section.settings.heading_position }};
 font-size:{{ section.settings.fontSize }}px;
  font-weight:bold;

}

.custom-collections--single-collection{
height:350px;
width: 100%;
position: relative;
}

.custom-collections--collections-container{
display: grid;
grid-template-columns: repeat({{section.settings.no_of_blocks_for_mobile}}, 1fr);
gap:20px;

}
.custom-collection--img-ele{
width: 100%;
height: 100%;
object-fit: cover;
}

.custom-collections--text-container{
position: absolute;
bottom: 0;
min-height: 35px;
padding: 4 15px;
background-color: rgba(0, 0, 0, 0.6);
display: flex;
justify-content: center;
align-items: center;
width: 100%;

}
.custom-collection--text-element{
color: white;
font-size: 14px;

}

.custom-collections--single-collection:hover .custom-collections--text-container{
animation-name: changebackground;
animation-duration: 0.3s;
animation-timing-function: linear;
animation-fill-mode: forwards;
}

@keyframes changebackground {
0%{
    background-color:  rgba(58, 131,126, 0.5);
    height: 50%;

}
100%{
    background-color: rgba(58, 131,126, 0.5);
    height: 100%;
} 

}

@media screen and (min-width:749px){
  .custom-collections--{{ section.id }}{
  padding-top:{{ section.settings.padding_top }}px;
  padding-bottom:{{ section.settings.padding_bottom }}px;
  }
  .custom-collection-heading{
    font-size: 42px;
  }
  .custom-collection--collections-container{
      grid-template-columns: repeat({{section.settings.no_of_blocks_for_desktop}}, 1fr);
  }

}

{% endstyle %}



 <div class="custom-collections-container page-width custom-collections--{{ section.id }}">
        {%- if section.settings.title != blank -%}
        <h1 class="custom-collection-heading">{{ section.settings.title }}</h1>
        {%- endif -%}
        <div class="custom-collection--collections-container">
        {%- for block in section.blocks -%}
           
            <div class="custom-collections--single-collection">
              <a class="collection_url" href= "{{ block.settings.collection.url }}" >
                  {% if block.settings.collection.img.src | image_url != blank -%}
                 <img src="{{ block.settings.collection.featured_image | image_url }}" height="auto" width="auto" class="custom-collection--img-ele" />
                 {%- endif -%}
                 <div class="custom-collections--text-container">
                    {%- if block.settings.collection.title -%}
                      <h3 class="custom-collection--text-element">{{ block.settings.collection.title }}</h3>
                    {%- endif -%}
                    
                 </div>
                </a> 
            </div>
  
            {%- endfor -%}
        </div>
    </div>
























{% schema %}
{
  "name": "Custom-collection-section",
  "tag": "section",
  "class": "section section-collection-list",
  "max_blocks": 15,
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Collections",
      "label": "t:sections.collection-list.settings.title.label"
    },
    {
      "type": "range",
      "id": "fontSize",
      "min": 20,
      "max": 100,
      "unit": "px",
      "label": "Font Size",
      "default": 30
    },
    {
      "type": "select",
      "id": "heading_position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left",
      "label": "Heading Position"
    },
    {
      "type": "color_background",
      "id": "color_background",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "no_of_blocks_for_desktop",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "No of Collections on Desktop",
      "default": 2
    },
    {
      "type": "range",
      "id": "no_of_blocks_for_mobile",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "No of Collections on Mobile",
      "default": 1
    }
  ],
  "blocks": [
    {
      "type": "featured_collection",
      "name": "t:sections.collection-list.blocks.featured_collection.name",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "t:sections.collection-list.blocks.featured_collection.settings.collection.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "custom collect section",
      "blocks": [
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        }
      ]
    }
  ]
}
{% endschema %}



