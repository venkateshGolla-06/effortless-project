{% style %}
.custom-subscribeus--{{ section.id }}{
  padding-top: {{ section.settings.padding_top | divided_by:2 }}px;
  padding-bottom: {{ section.settings.padding_bottom | divided_by:2 }}px;
  background-color: {{ section.settings.background_color }};
  min-height:50vh;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  padding:3rem;
}
@media screen and (min-width:768px){
  .custom-subscribeus--{{ section.id }}{
  padding-top: {{ section.settings.padding_top  }}px;
  padding-bottom: {{ section.settings.padding_bottom  }}px;
  }
}
.custom-subscribeus--button{
background-color: #5C6E4A;
width:90%;
height:40px;
border-radius:8px;
color: #fff;
border:none;
margin-top:20px;
}
.custom-subscribeus--form{
  display:flex;
  flex-direction:column;
  align-items:center;
  align-items:center;

}

.custom-subscribeus--input{
  padding:20px;
  border-radius:12px;
  height:40px;

}
@media screen and (min-width:768px){
  .custom-subscribeus--form{
   flex-direction:row;
   flex-wrap:wrap;
   justify-content:center;
}
.custom-subscribeus--button{
  width:140px;
  height:40px;
}
.custom-subscribeus--input{
  padding:20px;
  border-radius:12px;
  height:40px;
  border: none;

}
}

{% endstyle %}

<div class="custom-subscribeus--container custom-subscribeus--{{ section.id }}">
  <div class="custom-subscribeus--container">
        <h2 class="email-signup-banner__heading ">
          {{ section.settings.title }}
        </h2>
        <div class="custom-subscribeus--form">
          {% form 'customer' %}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div>
              <div>
                <input
                  id="NewsletterForm--{{ section.id }}"
                  type="email"
                  name="contact[email]"
                  class="custom-subscribeus--input"
                  value="{{ form.email }}"
                  aria-required="true"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  {% if form.errors %}
                    autofocus
                    aria-invalid="true"
                    aria-describedby="Newsletter-error--{{ section.id }}"
                  {% elsif form.posted_successfully? %}
                    aria-describedby="Newsletter-success--{{ section.id }}"
                  {% endif %}
                  placeholder="{{ 'newsletter.label' | t }}"
                  required
                >
                <p class="show-msg"></p>
                <button
                  type="submit"
                  class="custom-subscribeus--button"
                  name="commit"
                  id="Subscribe"
                  aria-label="{{ 'newsletter.button_label' | t }}"
                >
                  {{ section.settings.button_text }}
                </button>
              </div>
              {%- if form.errors -%}
                <small class="newsletter-form__message form__message" id="Newsletter-error--{{ section.id }}">
                  {%- render 'icon-error' -%}
                  {{- form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email -}}
                </small>
              {%- endif -%}
            </div>
          {% endform %}
         
        <div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Function to handle form submission
    function handleFormSubmit(event) {
      event.preventDefault(); // Prevent default form submission behavior

      var form = event.target; // Get the form element
      var emailInput = form.querySelector('input[type="email"]'); // Get the email input element
      var email = emailInput.value.trim(); // Get the value of the email input and remove leading/trailing whitespace

      if (email === '') {
        // If email is empty, show error message
        var errorMsg = form.querySelector('.show-msg');
        errorMsg.textContent = "Email can't be blank.";
        return; // Exit the function
      }

      // Reset error message if email is not empty
      var errorMsg = form.querySelector('.show-msg');
      errorMsg.textContent = '';

      // Hide the input element
      emailInput.style.display = 'none';

      // Show success message
      var successMsg = document.createElement('p');
      successMsg.textContent = "Thanks for subscribing Us!";
      form.appendChild(successMsg);
    }

    // Find the form element
    var form = document.querySelector('.custom-subscribeus--form form');

    // Add event listener for form submission
    form.addEventListener('submit', handleFormSubmit);
  });
</script>

