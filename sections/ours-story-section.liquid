
<head>   <link href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css" rel="stylesheet"> </head>
{% style %}

.our-story-bg-container{
    background-color:#2d2d2d ;
    padding:6rem;
    min-height: 100vh;
}

*, :after, :before {
    box-sizing: inherit;
}
.our-story-content-container{
    display: flex;
    justify-content: center;

}
.our-story-text-contentainer{
    padding: 5rem;
}
.our-story-iamge-container{
    width: 60%;
    border:none;
}
.our-story-text-contentainer{
    width: 40%;
}
.img-ele{
    width: 100%;
    height: 100%;
    object-fit: cover;
}
.heading-Ele{
    color: #ffffff;
    font-size: 40px;
}

.para-Ele{
    line-height: 28px;
    opacity: .8;
    color: #ffff;
}  
.button-ele {
    padding: 10px 30px;
    font-size: 16px;
    height: 40px;
    width: 160px;
    border-radius:8px ;
    outline: none;
    background-color: #3A837E;
    border: none;
    color: #ffffff;
    margin-top: 20px
    ;

}

@media screen and (max-width:768px) {
    .our-story-bg-container{
        padding: 3rem 1.5rem;
    }
    
    
}

@media screen and (max-width:1000px) {
    .our-story-content-container{
        flex-direction: column;
    }
    .our-story-iamge-container{
        width: 100%;
    }
    .our-story-text-contentainer{
        width: auto;
    }
    .our-story-text-contentainer{
        padding: 3rem;
    }
}
.splide__slide{
  position: "relative"
}

.splide__arrow--prev, .splide__arrow--next{
    display: none !important;
}

.splide__pagination__page{
    bottom: -50px;
    width: 10px !important;
    height: 10px !important;
    background-color: #ffffff !important;
    margin: 5px !important;
}
.splide__pagination__page.is-active{
    background-color: #3A837E !important;
}
.product-tag-circle{
  position: absolute;
    width: 15px;
    height: 15px;
    background: #ffffff;
    z-index: 9;
    border-radius: 100%;
    top: 35%;
    left: 30%;

}
.hotspot-container .product-tag-circle:before {
    position: absolute;
    content: "";
    border-radius: 100%;
    transition: all .4s;
    border: 15px solid #ffffff80;
    width: 36px;
    height: 36px;
    left: -10px;
    z-index: 8;
    top: -10px;
}
.hotspot-bottom .product-tag-circle{
 top:75%;
 left: 46%;
}


{% endstyle %}





<div class="our-story-bg-container">
  <div class="our-story-content-container">
   <div class="our-story-iamge-container">
       <div class="splide">
           <div class="splide__track">
               <ul class="splide__list">
                  {% for block in section.blocks %}
                   <li class="splide__slide">
                      {% if block.settings.Image_id != blank %}
                        <img src={{ block.settings.Image_id | image_url}}  class="img-ele">
                        <div class="hotspot-container">
                         <span class="product-tag-circle"></span>
                        </div>
                        <div class="hotspot-container hotspot-bottom">
                          <span class="product-tag-circle"></span>
                         </div>

                      {% endif %}
                   </li>
                   {% endfor %}
               </ul>
           </div>
       </div>
   </div>
   <div class="our-story-text-contentainer">
       <div class="heading-container">
           {% if section.settings.heading != blank %}
            <h1 class="heading-Ele">{{section.settings.heading  }}</h1>
            {% endif %}
            {% if section.settings.text != blank %}
              <p class="para-Ele">{{ section.settings.text }}</p>
            {% endif %}
             {% if section.settings.button_label != blank  %}
              <div class="button-container">
                <a href={{ section.settings.button_linkEl  }}> <button class="button-ele"> {{ section.settings.button_label }}   </button></a>
            </div>

              {% endif %}
           
       </div>

   </div>
  </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>
<script>
   var splide = new Splide( '.splide' );
    splide.mount();
</script> 











