















{% schema %}

   {
   "name": "Testmonial Section",
   "tag": "section",
   "class": "section",
   "settings": [
    {
        "type": "header",
        "content": "Testmonial settings"
    },
    {
        "type": "color_background",
        "id": "background_color",
        "label": "Background color",
        "default": "#ffffff"
     
     },
     {
        "type": "header",
        "content": "Text customization"
    },

      {
        "type": "inline_richtext",
        "id": "title",
        "default": "Testimonials",
        "label": "Heading"
      },
      {
        "type": "select",
        "id": "text_align",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left",
        "label": "Heading alignment"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description",
        "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
      },
      
      {
        "type": "header",
        "content": "Slider Options"
      },
      {
        "type": "checkbox",
        "id": "auto_play",
        "label": "Enable autoplay",
        "default": false
    },
    {
        "type": "checkbox",
        "id": "show_pagination",
        "label": "Show Dots",
        "default": false
    },
    {
        "type": "checkbox",
        "id": "show_arrows",
        "label": "Show arrows",
        "default": false
    },
    {
        "type": "range",
        "id": "auto_play_duration",
        "min": 1000,
        "max": 5000,
        "step": 1000,
        "unit": "ms",
        "label": "Autoplay Duration",
        "default":2000
    },
    {
        "type": "header",
        "content": "Animation Options"
    },
    {
        "type": "select",
        "id": "slider_animation",
        "label": "Slider animation",
        "options": [
            {
            "value": "fade",
            "label": "Fade"
            },
            {
              "value": "slide",
            "label": "Slide"
            },
             {
                 "value": "loop",
                "label": "Loop"
                }

        ],
        "default": "slide"
    },
    {
        "type": "header",
        "content": "Section Padding"
    },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding top",
        "default": 10
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding bottom",
        "default": 10
      }
      


   ],
   "blocks": [
    
    {
      "type": "slider",
      "name": "slider",
      "settings": [
       {
        "type": "header",
        "content": "Background Color Customization"
       },
       {
        "type": "color_background",
        "id": "background_active",
        "label": "Active card background color",
        "default": "rgba(246, 255, 194, 1)"
       },
       {
        "type": "color_background",
        "id": "background_normal",
        "label": "Card background color",
        "default": "#ffffff"
       },
       {
        "type": "text",
        "id": "testmonial_text",
        "label": "Testmonial card Text",
        "default": "“ Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque “"
       },
      {
        "type": "header",
        "content": "Author Deatils"
      },
      {
        "type": "image_picker",
        "id": "authour_image",
        "label": "author image"
      },
      
      {
        "type": "inline_richtext",
        "id": "author_name",
        "default": "Mr. John Doe",
        "label": "Author name"
      },
      {
        "type": "text",
        "id": "authror_title",
        "label": "author Title",
        "default": "Clients"
      },
      {
        "type": "image_picker",
        "id": "Main_image",
        "label": "Main Image"
      }

      ]
    
    
    }





   ],
   "presets": [
    {
     "name": " custom Testmonial section",
     "blocks": [
        {
        "type": "slider"
        }
     ]
    }

   ]


}




{% endschema %}