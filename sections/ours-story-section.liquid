
{% style %}

.our-story-bg-container{
    background-color:#2d2d2d ;
    padding:5rem;
    min-height: 100vh;
}

*, :after, :before {
    box-sizing: inherit;
    font-family: "Roboto";
}
.our-story-content-container{
    display: flex;
    justify-content: center;

}
.our-story-text-contentainer{
    padding: 5rem;
}
.our-story-iamge-container{
    width: 60%;
}
.our-story-text-contentainer{
    width: 40%;
}
.img-ele{
    width: 100%;
    height: auto;
    object-fit: cover;
}
.heading-Ele{
    color: #ffffff;
    font-size: 40px;
}

.para-Ele{
    line-height: 28px;
    opacity: .8;
    color: #ffff;
}  
.button-ele {
    padding: 10px 30px;
    font-size: 16px;
    height: 40px;
    width: 120px;
    border-radius:8px ;
    outline: none;
    background-color: #3A837E;
    border: none;
    color: #ffffff;
    margin-top: 20px
    ;

}

@media screen and (max-width:768px) {
    .our-story-bg-container{
        padding: 3rem 1.5rem;
    }
    
    
}

@media screen and (max-width:1000px) {
    .our-story-content-container{
        flex-direction: column;
    }
    .our-story-iamge-container{
        width: 100%;
    }
    .our-story-text-contentainer{
        width: auto;
    }
    .our-story-text-contentainer{
        padding: 3rem;
    }
}

.splide__arrow--prev, .splide__arrow--next{
    display: none !important;
}

.splide__pagination__page{
    bottom: -50px;
    width: 10px !important;
    height: 10px !important;
    background-color: #ffffff !important;
    margin: 5px !important;
}
.splide__pagination__page.is-active{
    background-color: #3A837E !important;
}



{% endstyle %}





<div class="our-story-bg-container">
  <div class="our-story-content-container">
   <div class="our-story-iamge-container">
       <div class="splide">
           <div class="splide__track">
               <ul class="splide__list">
                   <li class="splide__slide">
                       <img src={{ section.settings.image | image_url  }} class="img-ele">
                   </li>
                   <li class="splide__slide">
                       {% comment %} <img src="https://effortless-theme-demo.myshopify.com/cdn/shop/files/our-story-group_768x.png?v=1654113574" class="img-ele" /> {% endcomment %}
                   </li>
                   <li class="splide__slide">
                       {% comment %} <img src="https://effortless-theme-demo.myshopify.com/cdn/shop/files/our-story-group_768x.png?v=1654113574" class="img-ele" /> {% endcomment %}
                   </li>
               </ul>
           </div>
       </div>
   </div>
   <div class="our-story-text-contentainer">
       <div class="heading-container">
           <h1 class="heading-Ele">Our Story</h1>
           <p class="para-Ele">Effortless was designed and developed by leading ecommerce professionals who are passionate about design and user experience, creating intuitive, user-friendly layouts that are optimized for success and sure to delight our customers.</p>
           <div class="button-container">
               <button class="button-ele">
               Shop Now
               </button>
           </div>
       </div>

   </div>
  </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>
<script>
   var splide = new Splide( '.splide' );
    splide.mount();
</script> 











